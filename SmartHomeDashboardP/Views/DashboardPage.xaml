<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHomeDashboardP.Views.DashboardPage"
             Title="Smart Home">

    <VerticalStackLayout Padding="20">
        <Label Text="{Binding Title}"
               FontSize="24"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Devices}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BackgroundColor="#222" CornerRadius="12">
                        <VerticalStackLayout>
                            <Label Text="{Binding Icon}" FontSize="28" HorizontalOptions="Center" />
                            <Label Text="{Binding Name}" FontSize="18" HorizontalOptions="Center" />
                            <Label Text="{Binding Status}" FontSize="14" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Go to Settings"
                Command="{Binding GoToSettingsCommand}"
                Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
