<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartHomeDashboardP.ViewModels"
             x:Class="SmartHomeDashboardP.Views.DashboardPage"
             Title="Smart Home Dashboard">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Title -->
            <Label Text="{Binding Title}"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="DodgerBlue" />

            <!-- Device List -->
            <CollectionView ItemsSource="{Binding Devices}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="5" BackgroundColor="#1e1e1e" CornerRadius="15">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="20" TextColor="White"/>
                                <Label Text="{Binding Status}" FontSize="14" TextColor="LightGray"/>
                                <Button Text="Toggle" Command="{Binding ToggleCommand}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Graph Placeholder -->
            <Frame CornerRadius="20" Padding="15" BackgroundColor="#2e2e2e">
                <Label Text="Energy Usage Graph (coming soon...)" 
                       HorizontalOptions="Center" 
                       TextColor="LightGray"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
